{
	"compilerOptions": {
		"esModuleInterop": true,
		"skipLibCheck": true,
		"target": "es2022",
		"verbatimModuleSyntax": true,
		"allowJs": true,
		"resolveJsonModule": true,
		"moduleDetection": "force",
		"strict": true,
		"noUncheckedIndexedAccess": true,
		"moduleResolution": "Bundler",
		"module": "ESNext",
		"noEmit": true,
		"lib": ["es2022"]
	},
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs",
			"verbatimModuleSyntax": false,
			"allowJs": true,
			"resolveJsonModule": true,
			"moduleDetection": "force",
			"noEmit": true,
			"lib": ["es2022"]
		}
	}
}
